	function mousePressed(){

		let mousex = event.clientX; // Gets Mouse X
      let mousey = event.clientY; // Gets Mouse Y

       var total= mousex+mousey;
		// myVoice.setPitch(20);
		if(total>1000){
			myVoice.setRate(20);
			myVoice.setPitch(20);



		 }
		 else if (total<500){

			myVoice.setRate(50);
			myVoice.setPitch(0);

		 }
		 else if (total<800){
			myVoice.setRate(100);
			myVoice.setPitch(-20);


		 }

		 console.log(total);

		 		doSpeak();

	}
	

	

